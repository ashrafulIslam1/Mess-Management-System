@model List<Mess_Management_System.ViewModels.MonthlyBazarViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 ">
        <div class="d-flex justify-content-end shadow-sm p-3 pt-1 pb-0 mb-4 bg-body rounded">
            <div class="col-6">
                <p class="fs-4 fw-semibold text-primary">Monthly Bill List</p>
            </div>
            <form asp-action="Index" method="get">
                <div class="d-flex form-actions no-color">
                    <div class="me-2">
                        <input type="text" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Search Name" class="btn btn-outline-secondary btn-sm"/>
                    </div>
                    <div class ="d-flex me-3">
                        <div class="ms-2">
                            <input type="submit" value="Search" class="btn btn-dark btn-sm" />
                        </div>
                    </div>
                </div>
            </form>
 

                <div>
                    <a asp-controller="MonthlyBazar" asp-action="Generate" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle-fill"></i> &nbsp;Generate
                    </a>
                </div>
        </div>
    </div>

    <table class="table table-borderd table-striped shadow-sm">
        <thead>
            <tr class="small text-center">
                @*<th>
                    ID
                </th>*@
                <th>
                    Name @*<a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"><i class="bi bi-arrow-up"></i></a>*@
                </th>
                <th>
                    House Rent
                </th>
                <th>
                    Gass Bill
                </th>
                <th>
                    Bua Bill
                </th>
                <th>
                    Electricity Bill
                </th>
                <th>
                    Internet Bill
                </th>
                <th>
                    Dirt Bill
                </th>
                <th>
                    Water Bill
                </th>
                <th>
                    Total Meal
                </th>
                <th>
                    Food Cost
                </th>
                <th>
                    Bazar Cost
                </th>
                <th>
                    Total Cost
                </th>
                <th>
                    Total Payable cost
                </th>
                <th>
                    Month
                </th>
                <th>
                    Year
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="small text-center">
                    <td width="15%">
                        @item.Name
                    </td>
                    <td width="8%">
                        @item.HouseRent Tk
                    </td>
                    <td width="8%">
                        @item.GassBill Tk
                    </td>
                    <td width="8%">
                        @item.BuaBill Tk
                    </td>
                    <td width="8%">
                        @item.ElectricityBill Tk
                    </td>
                    <td width="8%">
                        @item.InternetBill Tk
                    </td>
                    <td width="8%">
                        @item.DirtCost Tk
                    </td>
                    <td width="8%">
                        @item.WaterBill Tk
                    </td>
                    <td width="8%">
                        @item.TotalMeal
                    </td>
                    <td width="8%">
                        @item.FoodCost Tk
                    </td>
                     <td width="8%">
                        @item.TotalBazarCost Tk
                    </td>
                    <td width="8%">
                        @item.TotalCost Tk
                    </td>
                    <td width="8%">
                        @item.TotalPayableCost Tk
                    </td>
                     <td width="5%">
                        @switch (@item.Month)
                        {
                            case 1:
                                <div>Januray</div>
                                break;
                            case 2:
                                <div>February</div>
                                break;
                            case 3:
                                <div>March</div>
                                break;
                            case 4:
                                <div>April</div>
                                break;
                            case 5:
                                <div>May</div>
                                break;
                            case 6:
                                <div>June</div>
                                break;
                            case 7:
                                <div>July</div>
                                break;
                            case 8:
                                <div>August</div>
                                break;
                            case 9:
                                <div>September</div>
                                break;
                            case 10:
                                <div>October</div>
                                break;
                            case 11:
                                <div>November</div>
                                break;
                            case 12:
                                <div>December</div>
                                break;

                            default:
                                <div>Wrong</div>
                                break;
                        }
                    </td>
                    <td width="5%">
                        @item.Year
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                         <a asp-controller="MonthlyBazar" asp-action="Update" asp-route-id="@item.MemberId" class="btn  btn-primary rounded-1 btn-sm"> <i class="bi bi-pencil-square"></i></a>
                         @*<a asp-controller="MemberList" asp-action="Delete" asp-route-id="@item.MemberId" class="btn btn-danger mx-1 rounded-1 btn-sm"> <i class="bi bi-trash3-fill"></i></a>*@
                     </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
