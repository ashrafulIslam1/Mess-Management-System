@model Mess_Management_System.ViewModels.MemberListViewModel;
@{
    ViewData["Title"] = "Create";
}

<div class="px-lg-5 border rounded-2 mx-lg-5 my-lg-5 small">
    
    <form class="row g-3 pb-3 px-lg-5 mx-lg-5 my-lg-2" method="post">
        <div>
            <h2 class="text-primary fs-4">Add Member</h2>
            <hr />
        </div>
        <div class="col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Contact"></label>
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="CurrentAddress"></label>
            <input asp-for="CurrentAddress" class="form-control" />
            <span asp-validation-for="CurrentAddress" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="PermanentAddress"></label>
            <input asp-for="PermanentAddress" class="form-control"/>
            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
        </div>
        <div class="d-flex mt-4 justify-content-between">
            <a asp-controller="MemberList" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Go back
            </a>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        </div>
</form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


