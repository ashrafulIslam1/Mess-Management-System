@model List<Mess_Management_System.ViewModels.MonthlyBazarSetupViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 ">
        <div class="d-flex justify-content-end shadow-sm p-3 pt-1 pb-0 mb-4 bg-body rounded">
            <div class="col-6">
                <p class="fs-4 fw-semibold text-primary">Monthly Staff Setup</p>
            </div>
            <form asp-action="Index" method="get">
                <div class="d-flex form-actions no-color">
                    <div class="me-2">
                        <input type="month" name="MonthYear" class="btn btn-outline-secondary btn-sm" />
                    </div>
                    <div class ="d-flex me-3">
                        <div class="ms-2">
                            <input type="submit" value="Search" class="btn btn-dark btn-sm" />
                        </div>
                    </div>
                </div>
            </form>
            <div>
                 <a asp-controller="MonthlyBazarSetup" asp-action="Create" class="btn btn-primary btn-sm">
                      <i class="bi bi-plus-circle-fill"></i> &nbsp;Add Staff
                 </a>
            </div>
        </div>
        @if (TempData["allertMessage"] != null)
        {
            <dvi class="alert alert-success h-25 w-35">
                <strong>Success !</strong> @TempData["allertMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </dvi>
        }
    </div>

    <table class="table table-borderd table-striped shadow-sm">
        <thead>
            <tr class="small text-center bg-info text-light">
                <th>
                    ID
                </th>
                <th>
                    House Rent
                </th>
                <th>
                    Gass Bill
                </th>
                <th>
                    Bua Bill
                </th>
                <th>
                    Electricity Bill
                </th>
                <th>
                    Internet Bill
                </th>
                <th>
                    Dirt Bill
                </th>
                <th>
                    Water Bill
                </th>
                <th>
                    Month
                </th>
                <th>
                    Year
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="small text-center">
                    <td width="5%">
                        @item.Id
                    </td>
                    <td width="10%">
                        @item.HouseRent
                    </td>
                    <td width="10%">
                        @item.GassBill
                    </td>
                    <td width="10%">
                        @item.BuaBill
                    </td>
                    <td width="10%">
                        @item.ElectricityBill
                    </td>
                    <td width="10%">
                        @item.InternetBill
                    </td>
                    <td width="10%">
                        @item.DirtCost
                    </td>
                    <td width="10%">
                        @item.WaterBill
                    </td>
                    <td width="10%">
                        @switch (@item.Month)
                        {
                            case 1:
                                <div>Januray</div>
                                break;
                            case 2:
                                <div>February</div>
                                break;
                            case 3:
                                <div>March</div>
                                break;
                            case 4:
                                <div>April</div>
                                break;
                            case 5:
                                <div>May</div>
                                break;
                            case 6:
                                <div>June</div>
                                break;
                            case 7:
                                <div>July</div>
                                break;
                            case 8:
                                <div>August</div>
                                break;
                            case 9:
                                <div>September</div>
                                break;
                            case 10:
                                <div>October</div>
                                break;
                            case 11:
                                <div>November</div>
                                break;
                            case 12:
                                <div>December</div>
                                break;

                            default:
                                <div>Wrong</div>
                                break;
                        }
                    </td>
                    <td width="10%">
                        @item.Year
                    </td>
                    <td>
                        <div class="btn-group mb-0" role="group">
                         <a asp-controller="MonthlyBazarSetup" asp-action="Update" asp-route-id="@item.Id" class="btn  btn-primary rounded-1 btn-sm"> <i class="bi bi-pencil-square"></i></a>
                     </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


